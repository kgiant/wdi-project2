<div class="container">
  <div class="">
    <h4>Team Directory</h4>
    <% if(locals.isLoggedIn) { %>
      <a href="/team/new">Add Team</a>
      <% } %>
    </div>
    <div class="row">
      <div class="col-8">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">All</a>
          </li>
          <%# <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">...</a>
          </li> %>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <table class="table table-hover">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Flag</th>
                  <th scope="col">Team</th>
                  <th scope="col">Country</th>
                  <th scope="col">Manager</th>
                  <% if(locals.isLoggedIn) { %>
                  <th scope="col">Update</th>
                  <th scope="col">Delete</th>
                  <% } %>
                </tr>
              </thead>
              <tbody>
                <% teams.forEach((team) =>{ %>
                  <tr>
                  <td><img height="30" width="30"  src="<%= team.image %>" alt="<%= team.name %>"></td>
                  <td><a href="/teams/<%= team.name %>"><%= team.name %></a> </td>
                  <td><%= team.country %></td>
                  <td></td>
                  <% if(locals.isLoggedIn) { %>
                  <td><a href="/teams/<%= team.name %>/edit">Update</a></td>
                  <td>
                  <form method="POST" action="/teams/<%= team.id %>">
                  <input type="hidden" name="_method" value="DELETE">
                  <button>Delete</button>
                  </form>
                  </td>
                  <% } %>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            </div>
          </div>
        </div>
        <div class="col-4">
          <%- include ../partials/_latestNews %>
        </div>
      </div>
      <div class="">
        <p></p>
        <p></p>
        <p></p>
      </div>
    </div>
