<div class="container">
  <div class="">
    <h4>User Directory</h4>
    <a href="/user/new">Add User</a>
  </div>
  <div class="row">
    <div class="col-8">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">All Members</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th scope="col">Access Rights</th>
                <th scope="col">Photo</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
                <th scope="col">Country</th>
                <th scope="col">Email</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user) =>{ %>
                <tr>
                <td><%= user.role %></td>
                <td><img height="30" width="30"  src="<%= user.image %>" alt=""></td>
                <td><a href="/users/<%= user.name %>"><%= user.name %></a> </td>
                <td><%= user.position %></td>
                <td><%= user.country %></td>
                <% if(locals.isLoggedIn && locals.user.id === user.id) { %>
                  <td><%= user.email %></td>
                  <td><a href="/users/<%= user.name %>/edit">Update</a></td>
                  <td>
                  <form method="POST" action="/users/<%= user.id %>">
                  <input type="hidden" name="_method" value="DELETE">
                  <button>Delete</button>
                  </form>
                  </td>
                  <% } %>
                  <% else {
                    <td></td>
                    <td></td>
                  <% } %>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-4">
          <%- include ../partials/_latestNews %>
        </div>
      </div>
    </div>
