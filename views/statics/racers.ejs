<div class="container">
  <div class="">
    <h4>Racer Directory</h4>
    <% if(locals.isLoggedIn) { %>
      <a href="/racer/new">Add Racer</a>
      <% } %>
    </div>
    <div class="row">
      <div class="col-8">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">All</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Ladies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Men</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <table class="table table-hover">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Rank</th>
                  <th scope="col">Photo</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Country</th>
                  <% if(locals.isLoggedIn) { %>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% racers.forEach((racer) =>{ %>
                    <tr>
                    <td><%= racer.fisRank %></td>
                    <td><img height="30" width="30"  src="<%= racer.image %>" alt="<%= racer.name %>"></td>
                    <td><a href="/racers/<%= racer.name %>"><%= racer.name %></a> </td>
                    <td><%= racer.category %></td>
                    <td><%= racer.country %></td>
                    <% if(locals.isLoggedIn) { %>
                      <td><a href="/racers/<%= racer.name %>/edit">Update</a></td>
                      <td>
                      <form method="POST" action="/racers/<%= racer.id %>">
                      <input type="hidden" name="_method" value="DELETE">
                      <button>Delete</button>
                      </form>
                      </td>
                      <% } %>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                  <table class="table table-hover">
                    <thead class="thead-light">
                      <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Country</th>
                        <% if(locals.isLoggedIn) { %>
                          <th scope="col">Update</th>
                          <th scope="col">Delete</th>
                          <% } %>
                        </tr>
                      </thead>
                      <tbody>
                        <% racers.forEach((racer) =>{ %>
                          <% if(racer.category === 'Ladies') { %>
                            <tr>
                            <td><%= racer.fisRank %></td>
                            <td><img height="30" width="30"  src="<%= racer.image %>" alt="<%= racer.name %>"></td>
                            <td><a href="/racers/<%= racer.name %>"><%= racer.name %></a> </td>
                            <td><%= racer.category %></td>
                            <td><%= racer.country %></td>
                            <% if(locals.isLoggedIn) { %>
                              <td><a href="/racers/<%= racer.name %>/edit">Update</a></td>
                              <td>
                              <form method="POST" action="/racers/<%= racer.id %>">
                              <input type="hidden" name="_method" value="DELETE">
                              <button>Delete</button>
                              </form>
                              </td>
                              <% } %>
                              </tr>
                              <% } %>
                              <% }) %>
                            </tbody>
                          </table>
                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                          <table class="table table-hover">
                            <thead class="thead-light">
                              <tr>
                                <th scope="col">Rank</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Country</th>
                                <% if(locals.isLoggedIn) { %>
                                  <th scope="col">Update</th>
                                  <th scope="col">Delete</th>
                                  <% } %>
                                </tr>
                              </thead>
                              <tbody>
                                <% racers.forEach((racer) =>{ %>
                                  <% if(racer.category === 'Men') { %>
                                    <tr>
                                    <td><%= racer.fisRank %></td>
                                    <td><img height="30" width="30"  src="<%= racer.image %>" alt="<%= racer.name %>"></td>
                                    <td><a href="/racers/<%= racer.name %>"><%= racer.name %></a> </td>
                                    <td><%= racer.category %></td>
                                    <td><%= racer.country %></td>
                                    <% if(locals.isLoggedIn) { %>
                                      <td><a href="/racers/<%= racer.name %>/edit">Update</a></td>
                                      <td>
                                      <form method="POST" action="/racers/<%= racer.id %>">
                                      <input type="hidden" name="_method" value="DELETE">
                                      <button>Delete</button>
                                      </form>
                                      </td>
                                      <% } %>
                                      </tr>
                                      <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>
                              </div>
                            </div>
                            <div class="col-4">
                              <%- include ../partials/_latestNews %>
                            </div>
                          </div>
                        </div>
