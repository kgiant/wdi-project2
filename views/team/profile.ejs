<%# First container includes team flag/logo and basic information %>
<div class="container team-tab">
  <div class="row">
    <div class="col-6">
      <img src="<%= team.image %>" alt="<%= team.name %>">
    </div>
    <div class="col-6">
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          <h2><%= team.name %></h2>
          <% if(locals.isLoggedIn) { %>
            <h4><a href="/teams/<%= team.name %>/edit">Edit Profile</a></h4>
            <form method="POST" action="/teams/<%= team.id %>">
            <input type="hidden" name="_method" value="DELETE">
            <button>Delete Team</button>
            </form>
            <% } %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Country: <%= team.country %></li>
            <li class="list-group-item">Coach: </li>
            <li class="list-group-item">Account manager: </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <%# Second container includes tabs with Racers, Results, Galery  %>
  <div class="container racer-tab">
    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Team Racers</a>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Gallery</a>
        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Results</a>
      </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <p>ADD RACER TABLE HERE</p>
      </div>
      <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="http://www.fis-ski.com/mm/Photo/Photo/General/04/29/49/42949_G08_W01.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="http://www.fis-ski.com/mm/Photo/Photo/General/04/29/34/42934_G08_W01.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="http://www.fis-ski.com/mm/Photo/Photo/General/04/29/37/42937_G08_W01.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
    </div>
  </div>

  <div class="container">
    <h2>Team Headquarters: <%= team.country %></h2>
    <div class="row">
      <div class="col-6">
        <div class="map">

        </div>
      </div>
      <div class="col-6">

      </div>
    </div>
  </div>
