
<div class="container">
  <h2>Update Team Information</h2>
  <div class="row">
    <div class="col-6">
      <form method="POST" action="/teams/<%= team.id %>">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="" value="<%= team.name %>">
        </div>
        <div class="form-group">
          <label for="country">Country</label>
          <select class="form-control" name="country" id="country" value="<%= team.country %>">
            <option>Austria</option>
            <option>Canada</option>
            <option>Croatia</option>
            <option>Finland</option>
            <option>France</option>
            <option>Germany</option>
            <option>Greece</option>
            <option>Italy</option>
            <option>Norway</option>
            <option>Slovakia</option>
            <option>Slovenia</option>
            <option>Sweden</option>
            <option>Switzerland</option>
            <option>USA</option>
          </select>
        </div>
        <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control-file" name="email" id="email" value="<%= team.email %>">
      </div>
        <div class="form-group">
        <label for="image">Update link to flag photo</label>
        <input type="text" class="form-control-file" name="image" id="image" value="<%= team.image %>">
      </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
    <div class="col-6">
    </div>
  </div>
</div>
